{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "module": "Node16",
    "target": "ES2022",

    "strict": true,
    "useUnknownInCatchVariables": false,
    "noEmitOnError": true,
    "noUncheckedIndexedAccess": true,
  },
  "exclude": [
    "node_modules"
  ]
}